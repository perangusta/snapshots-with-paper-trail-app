<%= render partial: 'shared/menu' %>

<h1>Negotiations</h1>

<%= render partial: 'shared/filters' %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>State</th>
      <th>Name</th>
      <th>Baseline</th>
      <th>Savings</th>
      <th>Project</th>
      <th>Last modification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @negotiations.each do |negotiation| %>
      <tr>
        <td><%= negotiation.id %></td>
        <td><%= negotiation.state %></td>
        <td><%= negotiation.name %></td>
        <td><%= negotiation.baseline %></td>
        <td><%= negotiation.savings %></td>
        <td><%= @projects_names[negotiation.project_id] if negotiation.project_id.present? %></td>
        <td><%= l(negotiation.updated_at) %></td>
        <td><%= link_to 'Show', negotiation %></td>
        <td><%= link_to 'Edit', edit_negotiation_path(negotiation) %></td>
        <td><%= link_to 'Destroy', negotiation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Negotiation', new_negotiation_path %>

<%= render partial: 'shared/versioning', locals: { versions: @versions } %>
